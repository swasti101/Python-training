def is_prime(n):
    if n < 2:
        return False
    for i in range(2, int(n**0.5) + 1):
        if n % i == 0:
            return False
    return True


import unittest

class TestPrimeCheck(unittest.TestCase):
    def test_prime(self):
        self.assertTrue(is_prime(7))
        self.assertTrue(is_prime(13))
        self.assertFalse(is_prime(4))
        self.assertFalse(is_prime(1))

if __name__ == "__main__":
    unittest.main()


